<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorText"
    android:weightSum="1"

    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainLayout"
        android:layout_weight="0.5"
        android:gravity="center">


        <TextView
            android:id="@+id/tv_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#fff"
            android:fontFamily="sans-serif-condensed"
            android:textSize="20dp"
            />



        <TextView
            android:id="@+id/tv_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorText"
            android:layout_below="@id/tv_temp"
            android:fontFamily="sans-serif-condensed"
            android:textSize="20dp"/>

    </RelativeLayout>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/mainLayout1"
    android:layout_weight="0.5">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_mins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center"
            android:textColor="@color/colorText"
            android:layout_alignParentLeft="true"
            android:text="min"
            android:fontFamily="sans-serif-condensed"
            android:textSize="15dp"/>


        <TextView
            android:id="@+id/tv_curents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:layout_toRightOf="@+id/tv_min"
            android:gravity="center"
            android:textColor="@color/colorText"
            android:text="Current"
            android:fontFamily="sans-serif-condensed"
            android:textSize="15dp"/>


        <TextView
            android:id="@+id/tv_maxs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center"
            android:layout_toRightOf="@+id/tv_curent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:textColor="@color/colorText"
            android:text="max"
            android:fontFamily="sans-serif-condensed"
            android:textSize="15dp"/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_weight="1">

    <TextView
        android:id="@+id/tv_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:gravity="center"
        android:textColor="@color/colorText"
        android:layout_alignParentLeft="true"
        android:text="min"
        android:fontFamily="sans-serif-condensed"
        android:textSize="15dp"/>


    <TextView
        android:id="@+id/tv_curent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:layout_toRightOf="@+id/tv_min"
        android:gravity="center"
        android:textColor="@color/colorText"
        android:text="Current"
        android:fontFamily="sans-serif-condensed"
        android:textSize="15dp"/>


    <TextView
        android:id="@+id/tv_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:gravity="center"
        android:layout_toRightOf="@+id/tv_curent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:textColor="@color/colorText"
        android:text="max"
        android:fontFamily="sans-serif-condensed"
        android:textSize="15dp"/>



</LinearLayout>








    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

    <TextView
        android:id="@+id/tv_day1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:layout_weight="0.3"
        android:textColor="@color/colorText"
        android:layout_alignParentLeft="true"
        android:fontFamily="sans-serif-condensed"
        android:textSize="15dp"/>



    <ImageView
        android:id="@+id/tv_image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@+id/tv_day1"
        android:gravity="center"
        android:scaleType="fitXY"
        android:layout_weight="0.3"
        />


    <TextView
        android:id="@+id/tv_weather1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:layout_toRightOf="@+id/tv_image1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:textColor="@color/colorText"
        android:fontFamily="sans-serif-condensed"
        android:textSize="20dp"/>

    </LinearLayout>









    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

    <TextView
        android:id="@+id/tv_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_weight="0.3"
        android:gravity="center"
        android:textColor="@color/colorText"
        android:layout_alignParentLeft="true"
        android:fontFamily="sans-serif-condensed"
        android:textSize="15dp"/>


    <ImageView
        android:id="@+id/tv_image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:layout_marginTop="120dp"
        android:scaleType="fitXY"
        android:layout_toRightOf="@+id/tv_days"
        android:gravity="center"
        />


    <TextView
        android:id="@+id/tv_weather2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:layout_toRightOf="@+id/tv_image2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:textColor="@color/colorText"
        android:fontFamily="sans-serif-condensed"
        android:textSize="20dp"/>

    </LinearLayout>







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">
    <TextView
        android:id="@+id/tv_dayss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:layout_marginTop="180dp"
        android:gravity="center"
        android:textColor="@color/colorText"
        android:layout_alignParentLeft="true"
        android:fontFamily="sans-serif-condensed"
        android:textSize="15dp"/>


    <ImageView
        android:id="@+id/tv_image3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:layout_marginTop="180dp"
        android:layout_toRightOf="@+id/tv_dayss"
        android:scaleType="fitXY"
        android:textSize="20dp"/>


    <TextView
        android:id="@+id/tv_weather3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_weight="0.3"
        android:gravity="center"
        android:layout_toRightOf="@+id/tv_image3"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:textColor="@color/colorText"
        android:fontFamily="sans-serif-condensed"
        android:textSize="20dp"/>

    </LinearLayout>




</RelativeLayout>


</LinearLayout>